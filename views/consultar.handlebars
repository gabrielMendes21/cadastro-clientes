<div class="container">
    <br>
    <h4>Listagem dos clientes cadastrados</h4>
    
    <div>
        <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
        <div class="row">
            &nbsp;
        </div>
    </div>
    
    <table class="table text-center">
        <thead style="background-color: #000000" class="text-white">
            <tr> 
                <th>Nome</th>
                <th>Telefone</th>
                <th>Origem</th>
                <th>Data do Contato</th>
                <th>Observação</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                {{#each agendamentos}}
                    <tr>
                        <td>{{this.data.nome}}</td>
                        <td>{{this.data.telefone}}</td>
                        <td>{{this.data.origem}}</td>
                        <td>{{this.data.data_contato}}</td>
                        <td>{{this.data.observacao}}</td>
                        <td>
                            <button type="button" class="btn text-light" style="background-color:dodgerblue; color: white"><a href="/editar/{{this.id}}">Editar</a></button>
                            <button type="button" class="btn text-light" style="background-color: darkred; color: white"><a href="/excluir/{{this.id}}">Excluir</a></button>
                        </td>
                    </tr>
                {{/each}}
            </tr>
        </tbody>
    </table>
</div>